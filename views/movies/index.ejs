<h1>Movies!</h1>

<div class="container">
	<div class="row">
		<% movies.forEach(function(movie) { %>
			<% if(movie.Poster !== "N/A") { %>
				<div class="col s12 m6">
					<div class="card">
						<div class="card-content">
							<span class="card-title"><%=movie.Title%></span>
							<img src="<%=movie.Poster%>">
							<div class="card-action">
								<form action="/user_movies" method="POST">
									<input type="hidden" name="title" value="<%=movie.Title%>">
									<input type="hidden" name="poster" value="<%=movie.Poster%>">
									<input type="hidden" name="rating" value="10">
									<input type="hidden" name="year" value="<%=movie.Year%>">
									<input type="hidden" name="type" value="<%=movie.Type%>">
									<input type="hidden" name="api_id" value="<%=movie.imdbID%>">
									<input type="submit" class="waves-effect waves-light btn" value="Add Movie">
								</form>
							</div>
						</div>
					</div>
				</div>
			<% } %>
		<% }) %>
	</div>
</div>
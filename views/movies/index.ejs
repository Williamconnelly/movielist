<div id="movies">
	<div class="row">
		<% movies.forEach(function(movie) { %>
			<% if(movie.Poster !== "N/A" && movie.Type !== "game" && movie.Type === "movie") { %>
				<div class="col s6 m3"> 
					<div class="card tooltipped" data-position="top" data-tooltip="<%=movie.Title%>">
						<div class="card-content">
							<img src="<%=movie.Poster%>" class="responsive-img index-movie" alt="<%=movie.Title%>">
							<div class="card-action">
								<form action="/user_movies" method="POST">
									<input type="hidden" name="title" value="<%=movie.Title%>">
									<input type="hidden" name="poster" value="<%=movie.Poster%>">
									<input type="hidden" name="year" value="<%=movie.Year%>">
									<input type="hidden" name="type" value="<%=movie.Type%>">
									<input type="hidden" name="api_id" value="<%=movie.imdbID%>">
									<% if (currentUser) { %>
										<input type="submit" class="waves-effect waves-light movie-button" value="Add Movie">
<!-- 										    <select class="input-field rating-select col m6 s2 input-button" name="rating">
												<label>Rating</label>
												<option value="" disabled selected>Rating</option>
												<option value="0">0</option>
												<option value="1">1</option>
												<option value="2">2</option>
												<option value="3">3</option>
												<option value="4">4</option>
												<option value="5">5</option>
												<option value="6">6</option>
												<option value="7">7</option>
												<option value="8">8</option>
												<option value="9">9</option>
												<option value="10">10</option>
											</select> -->
									<% } else { %>
									<!-- Do nothing -->
									<% } %>
								</form>
								<form action="/movies/<%=movie.imdbID%>" method="GET">
									<input type="submit" class="waves-effect waves-light movie-button" value="Details">
									<input type="hidden" name="api_id" value="<%=movie.imdbID%>">
								</form>
							</div>
						</div>
					</div>
				</div>
			<% } %>
		<% }) %>
	</div>
</div>
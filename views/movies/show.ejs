<div class="movie-grid">
	<div class="title-col">
		<h3><%= movie.Title %></h3>
	</div>
	<div class="year-col">
		<h3>(<%= movie.Year %>)</h3>
	</div>
	<div class="poster-col">
		<img src="<%= movie.Poster %>">
	</div>
	<div class="info-col">
		<h5 class="plot-info"><%= movie.Plot %></h5>
		<h6 class="director-info">Director: <%= movie.Director %></h6>
		<h6 class="genre-info"><%= movie.Genre %></h6>
		<h6 class="runtime-info">Runtime: <%= movie.Runtime %></h6>
	</div>
	<div class="rating-col">
		<!-- Renders based on current user and only if they have the movie in their list -->
		<% if (currentUser && user_movie.length > 0) { %>
		<h5>Current Rating: <%=user_movie[0].rating%></h5>
		<form method="POST" action="/user_movies/<%= movie.id %>" class="updateScore">
						<select class="browser-default" name="rating">
							<option value="0" disabled selected>Update Rating</option>
						    <option value="1">1</option>
						    <option value="2">2</option>
						    <option value="3">3</option>
						    <option value="4">4</option>
						    <option value="5">5</option>
						    <option value="6">6</option>
						    <option value="7">7</option>
						    <option value="8">8</option>
						    <option value="9">9</option>
						    <option value="10">10</option>
						</select>
						<input type="hidden" name="id" value="<%=movie.id%>">
						<div class="modal-footer">
      						<button type="submit" class="modal-close waves-effect waves-green btn-flat">Update</button>
    					</div>
      				</form>
		<% }; %>
	</div>
</div>

